{% extends 'base.html.twig' %}

{% block title %}Autoři{% endblock %}

{% block body %}

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Autoři</h1>
            <p>Přehled autorů a počet knih</p>
        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Název autora</th>
            <th scope="col">Počet knih</th>
        </tr>
        </thead>
        <tbody>
            {% for author in authors %}
                <tr>
                    <td><a href="{{ path('books', {filter: "true", author:author.id}) }}">{{ author.lastname }}</td>
                    <td>({{ author.books|length }})</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
