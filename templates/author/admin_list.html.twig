{% extends 'base.html.twig' %}

{% block title %}Administrace - autoři{% endblock %}

{% block body %}

    <div class="float-right">
        <input type="button" onclick="location.href='{{ path('add_author') }}';" value="Přidat autora" />
    </div>


    <table class="table">
        <thead>
        <tr>
            <th scope="col">Název autora</th>
            <th scope="col">Počet knih</th>
            <th scope="col">Akce</th>
        </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td><a href="{{ path('edit_author', {id: author.id}) }}">{{ author.lastname }}</a></td>
                <td>({{ author.books|length }})</td>
                <td><a href="{{ path('remove_author', {id: author.id}) }}">Vymazat</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
